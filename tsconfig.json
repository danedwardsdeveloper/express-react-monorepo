{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"rootDir": "./server",
		"outDir": "./dist/server",
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"baseUrl": "."
	},
	"include": ["server/**/*"],
	"exclude": ["node_modules", "tests", "ops", "client", "dist"]
}
